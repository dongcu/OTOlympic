	<!-- 마이페이지(자게) 게시글 삭제 -->
	<delete id="myFreeDelete">
		delete from f_board
		where b_num = #{b_num}
	</delete>

	<!-- 마이페이지(자게) 게시글 일괄 삭제 -->
	<delete id="myFreeDeleteAll">
		delete from f_board
